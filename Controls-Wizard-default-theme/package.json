{
   "name": "sbis3.engine",
   "version": "24.2000.0",
   "repository": {
      "type": "git",
      "url": "git@git.sbis.ru:sbis/engine.git"
   },
   "files": [
      "client/Clipboard/*",
      "client/EngineLanguage/*",
      "client/EngineLink/*",
      "client/EngineUser/*",
      "client/Old/WS3Browser/*",
      "client/Old/WS3ColumnsEditor/*",
      "client/Old/WS3DialogAction/*",
      "client/Old/WS3ExpandPanel/*",
      "client/Old/WS3ExportPresets/*",
      "client/Old/WS3Header/*",
      "client/Old/WS3LinkProcessor/*",
      "client/Old/WS3LongOperations/*",
      "client/Old/WS3MiniCard/*",
      "client/Old/WS3NavigationPanel/*",
      "client/Old/WS3Page/*",
      "client/Old/WS3ReportFilter/*",
      "client/Old/WS3RoutesMessage/*",
      "client/RichEditor/*",
      "client/Graphs/*",
      "client/Headers",
      "client/Hint/*",
      "client/Layout/*",
      "client/EntityView/*",
      "client/Keyboard/*",
      "client/Calculator/*",
      "client/Calculator-default-theme/*",
      "client/Merge/*",
      "client/NavigationPanels/*",
      "client/EngineUser-default-theme/*",
      "client/Layout-default-theme/*",
      "client/Carousel/*",
      "client/ExpandableCollection/*",
      "client/ExpandableCollection-default-theme/*",
      "client/TextEditor/*",
      "client/Dashboard/*",
      "client/Merge-default-theme/*",
      "client/NavigationPanels-default-theme/*",
      "client/RichEditor-default-theme/*",
      "client/Graphs-default-theme/*",
      "client/Keyboard-default-theme/*",
      "client/TOC/*"
   ],
   "scripts": {
      "build && start": "npm run build && npm run start",
      "build": "npm run build:typescript && npm run build:app",
      "build:typescript": "wasaby-cli initTSEnv",
      "build:app": "wasaby-cli buildProject --copy --umd",
      "build:watch:react": "wasaby-cli buildProject --copy --watcher --copy --umd",
      "compile": "saby-typescript --compiler",
      "start": "wasaby-cli startServer",
      "start:units": "wasaby-cli runUnitTests --server",
      "start:watcher": "wasaby-cli buildProject --copy --umd --watcher --react",
      "test": "wasaby-cli runUnitTests --umd --NodeJS --report=console",
      "test:coverage": "wasaby-cli runUnitTests --umd --NodeJS --coverage",
      "test:debug": "wasaby-cli --inspect-brk runUnitTests --umd --NodeJS --report=console",
      "prepare": "npm run update-cli-store && npm run build:typescript && wasaby-cli initGitHooks",
      "update-cli-store": "wasaby-cli loadProject --sbis-cdn=rc-24.2000",
      "lint": "eslint .",
      "lint:fix": "eslint . --fix",
      "lint:css": "stylelint \"**/*.{css,less}\"",
      "lint:css:fix": "stylelint \"**/*.{css,less}\" --fix",
      "lint:debug": "eslint . -o eslintResult.log --no-color --quiet",
      "lint:css:debug": "stylelint \"**/*.{css,less}\" -o stylelintResult.log --no-color",
      "prettier": "prettier --write ."
   },
   "devDependencies": {
      "wasaby-cli": "git+https://git.sbis.ru/saby/wasaby-cli.git#rc-24.2000"
   },
   "wasaby-cli": {
      "preCommitHooks": [
         "Prettier",
         "ESLint",
         "Stylelint"
      ],
      "config": "wasaby.json"
   }
}