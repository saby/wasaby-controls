<div class="controlsDemo__wrapper">
   <div class="controlsDemo__cell">
      <div class="controls-text-label">Не определен fractionSize</div>
      <Controls.baseDecorator:Number value="{{_value}}"/>
   </div>
   <div class="controlsDemo__cell">
      <div class="controls-text-label">fractionSize = 0</div>
      <Controls.baseDecorator:Number value="{{_value}}" fractionSize="{{0}}"/>
   </div>
   <div class="controlsDemo__cell">
      <div class="controls-text-label">fractionSize = 3</div>
      <Controls.baseDecorator:Number value="{{_value}}" fractionSize="{{3}}"/>
   </div>
   <div class="controlsDemo__cell">
      <div class="controls-text-label">fractionSize = 10</div>
      <Controls.baseDecorator:Number value="{{_value}}" fractionSize="{{10}}"/>
   </div>
</div>
