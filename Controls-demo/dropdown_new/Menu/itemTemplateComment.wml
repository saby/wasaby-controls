<ws:partial template="Controls/dropdown:ItemTemplate"
            scope="{{ _options }}"
            multiLine="{{true}}">
   <ws:contentTemplate>
      <div class="ControlsDemo-ButtonsMenu__templateComment">
         {{itemData.getPropValue(item.contents, 'title')}}
         <div class="ControlsDemo-ButtonsMenu__comment">
            {{itemData.getPropValue(item.contents, 'comment')}}
         </div>
      </div>
   </ws:contentTemplate>
</ws:partial>