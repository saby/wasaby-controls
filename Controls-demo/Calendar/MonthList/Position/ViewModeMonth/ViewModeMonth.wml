<ws:partial template="wml!Controls-demo/Calendar/MonthList/resources/DemoTemplate"
    title="Пример скролирования к году, месяцу и дню. Список рисуется месяцами."
    monthListTitle="{{_getHeader(_position)}}">
    <div class="controlsDemo__flex controlsDemo__flexColumn">
        <Controls.calendar:MonthList
            name="monthList"
            bind:position="_position"
            viewMode="month">
            <ws:monthHeaderTemplate>
                <div>{{_formatMonth(monthHeaderTemplate.date)}}</div>
            </ws:monthHeaderTemplate>
        </Controls.calendar:MonthList>

        <div class="controlsDemo__wrapper">
            <span class="controlsDemo__button controlsDemo__scrollToDate1" on:click="_scrollToDate(2019, 0, 1)">Скролировать к 01.01.2019</span>
            <span class="controlsDemo__button controlsDemo__scrollToDate2" on:click="_scrollToDate(2019, 2, 1)">Скролировать к 01.03.2019</span>
            <span class="controlsDemo__button controlsDemo__scrollToDate3" on:click="_scrollToDate(2019, 5, 10)">Скролировать к 10.06.2019</span>
        </div>
    </div>
</ws:partial>
