<Controls.lookupPopup:Controller
    attr:class="demo-Selector__companiesLayout"
    name="SelectorController"
    selectedItems="{{_options.selectedItems}}">
    <Controls.listDataOld:DataContainer source="{{_source}}" keyProperty="{{_keyProperty}}" filter="{{_filter}}">
        <Controls.lookupPopup:Container keyProperty="{{_keyProperty}}" multiSelect="{{_options.multiSelect}}">
            <Controls.browser:Browser
                searchParam="title"
                minSearchLength="{{3}}"
                displayProperty="title"
                idProperty="{{_keyProperty}}"
                multiSelectVisibility="{{_options.multiSelect ? 'visible'}}"
            >
                <div class="ws-fragment">
                    <div class="controlsDemo__wrapper">
                        <Controls.searchDeprecated:InputContainer>
                            <Controls.search:Input/>
                        </Controls.searchDeprecated:InputContainer>
                    </div>
                    <Controls.listDataOld:ListContainer>
                        <Controls.lookupPopup:ListContainer>
                            <Controls.list:View
                                attr:class="ControlsDemo-Selector__flatListCompanies">
                                <ws:itemTemplate>
                                    <ws:partial template="Controls/list:ItemTemplate">
                                        <ws:contentTemplate>
                                            <div>
                                                <span class="{{ !itemTemplate.item.contents.get('city') ? 'ControlsDemo-Lookup__item_bold' }}">{{itemTemplate.item.contents.get('title')}}</span>
                                                <ws:if data="{{itemTemplate.item.contents.get('city')}}">
                                                    <span class="controlsDemo-Selector__title"> ({{itemTemplate.item.contents.get('city')}})</span>
                                                </ws:if>
                                            </div>
                                        </ws:contentTemplate>
                                    </ws:partial>
                                </ws:itemTemplate>
                            </Controls.list:View>
                        </Controls.lookupPopup:ListContainer>
                    </Controls.listDataOld:ListContainer>
                </div>
            </Controls.browser:Browser>
        </Controls.lookupPopup:Container>
    </Controls.listDataOld:DataContainer>
</Controls.lookupPopup:Controller>
