                columns="{{_columns}}"
                multiSelectVisibility="visible"
                rowSeparatorSize="{{ _rowSeparator2 ? 's' }}"
                columnSeparatorSize="{{ _columnSeparator2 ? 's' }}"
        />
    </div>
    <div class="controlsDemo__inline-block" style="max-width: 370px; margin-right: 20px;">
        <div style="margin-bottom: 20px;">
            <Controls.checkbox:Checkbox bind:value="_rowSeparator3" caption="Show row separator"/>
