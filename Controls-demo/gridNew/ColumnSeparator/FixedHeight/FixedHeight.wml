<div class="controlsDemo__wrapper">
    <div class="controlsDemo__inline-block" style="max-width: 370px; margin-right: 20px;">
    <div style="margin-bottom: 20px;">
        <Controls.checkbox:Checkbox bind:value="_rowSeparator1" caption="Show row separator"/>
        <Controls.checkbox:Checkbox bind:value="_columnSeparator1" caption="Show column separator"/>
    </div>
    <Controls.grid:View
            keyProperty="key"
            source="{{_viewSource}}"
            header="{{_header}}"
            columns="{{_columns}}"
            multiSelectVisibility="visible"
            rowSeparatorSize="{{ _rowSeparator1 ? 's' }}"
            columnSeparatorSize="{{ _columnSeparator1 ? 's' }}"
    />
</div>
    <div class="controlsDemo__inline-block" style="max-width: 370px; margin-right: 20px;">
        <div style="margin-bottom: 20px;">
