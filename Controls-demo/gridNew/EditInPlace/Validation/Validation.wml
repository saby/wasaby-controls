<div class="controlsDemo__cell">
  <div class="controlsDemo__inline-flex" style="max-width: 356px">
    <Controls.list:Container>
      <Controls.grid:View
          storeId="EditInPlaceValidation"
          itemActionsPosition="outside"
          header="{{_header}}"
          itemActions="{{_itemActions}}"
          columns="{{_columns}}">
        <ws:editingConfig>
          <ws:Object editOnClick="{{true}}" autoAdd="{{true}}" toolbarVisibility="{{true}}"/>
        </ws:editingConfig>
      </Controls.grid:View>
    </Controls.list:Container>
  </div>
</div>
