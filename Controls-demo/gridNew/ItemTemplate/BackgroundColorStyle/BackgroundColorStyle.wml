<div class="controlsDemo__wrapper">
    <Controls.grid:View
            keyProperty="key"
            source="{{_viewSource}}"
            columns="{{_columns}}"
            itemActions="{{_itemActions}}"
            attr:style="max-width: 700px">
        <ws:itemTemplate>
            <ws:partial template="Controls/grid:ItemTemplate"
                        scope="{{ _options }}"
                        backgroundColorStyle="{{_backgroundStyleMap[itemTemplate.item.key]}}"
                        hoverBackgroundStyle="{{_backgroundStyleMap[itemTemplate.item.key]}}"/>
        </ws:itemTemplate>
    </Controls.grid:View>
</div>
