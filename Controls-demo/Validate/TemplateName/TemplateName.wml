<div class="controlsDemo__flexColumn controlsDemo__ml2">
    <div class="controlsDemo__cell controlsDemo__mb2">
        <div class="controls-text-label controlsDemo__maxWidth550">Стандартное сообщение об ошибке</div>
        <Controls.validate:InputContainer name="InputValidate2"
                                          attr:class="validate_item_input ControlsDemo-ValidateInfobox_inputValidate2">
            <ws:validators>
                <ws:Function value="{{_value1}}">Controls/validate:isEmail</ws:Function>
            </ws:validators>
            <ws:content>
                <Controls.input:Text
                        name="textBox1"
                        bind:value="_value1"
                        placeholder="Введите Email"/>
            </ws:content>
        </Controls.validate:InputContainer>
    </div>

    <div class="controlsDemo__cell controlsDemo__mb2">
        <div class="controls-text-label controlsDemo__maxWidth550">Валидатор вернул шаблон</div>
        <Controls.validate:InputContainer name="InputValidate2"
                                          attr:class="validate_item_input ControlsDemo-ValidateInfobox_inputValidate2">
            <ws:validators>
                <ws:Function value="{{_value2}}">Controls-demo/Validate/TemplateName/Validators:isCustomTemplate</ws:Function>
            </ws:validators>
            <ws:content>
                <Controls.input:Text
                        name="textBox2"
                        bind:value="_value2"
                        placeholder="Введите Email"/>
            </ws:content>
        </Controls.validate:InputContainer>
    </div>
    <div class="controlsDemo__cell controlsDemo__mb2">
        <div class="controls-text-label controlsDemo__maxWidth550">Валидатор вернул шаблон и опции</div>
        <Controls.validate:InputContainer name="InputValidate2"
                                          attr:class="validate_item_input ControlsDemo-ValidateInfobox_inputValidate2">
            <ws:validators>
                <ws:Function value="{{_value3}}">Controls-demo/Validate/TemplateName/Validators:isCustomTemplateOptions</ws:Function>
            </ws:validators>
            <ws:content>
                <Controls.input:Text
                        name="textBox3"
                        bind:value="_value3"
                        placeholder="Введите Email"/>
            </ws:content>
        </Controls.validate:InputContainer>
    </div>
</div>
