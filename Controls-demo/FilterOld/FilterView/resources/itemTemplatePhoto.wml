<ws:partial template="Controls/dropdown:ItemTemplate"
            scope="{{ _options }}"
            multiLine="{{true}}">
   <ws:contentTemplate>
      <div class="controls-demo-FilterView-TemplateItem">
         <img class="controls-demo-FilterView-template-photo" src="{{item.contents['photo']}}" />
         <div class="controls-demo-FilterView-template-content">
            <div class="controls-demo-FilterView-template-text">{{item.contents['title']}}</div>
            <div class="controls-demo-FilterView-template-comment controls-demo-FilterView-template-text">{{item.contents['comment']}}</div>
         </div>
      </div>
   </ws:contentTemplate>
</ws:partial>