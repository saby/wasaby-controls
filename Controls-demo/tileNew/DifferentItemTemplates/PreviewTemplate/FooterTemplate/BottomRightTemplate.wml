<div class="controlsDemo__wrapper">
   <Controls.tile:View
           tileMode="static"
           tileScalingMode="none"
           tileWidth="250"
           imageProperty="image"
           keyProperty="key"
           displayProperty="title"
           source="{{_viewSource}}">
      <ws:itemTemplate>
         <ws:partial
                 template="Controls/tile:PreviewTemplate"
                 scope="{{itemTemplate}}">
            <ws:footerTemplate>
               <div>Дополнительная информация на плитке</div>
            </ws:footerTemplate>
         </ws:partial>
      </ws:itemTemplate>
   </Controls.tile:View>
</div>
