<div class="controlsDemo__wrapper controlsDemo__width800px">
    <div class="controlsDemo-MultilineTextDecorator__line ws-flexbox">
        <Controls.input:Label caption="Введите текст:"/>
        <Controls.input:Area
                attr:class="controlsDemo-MultilineTextDecorator__input"
                minLines="{{ 4 }}"
                bind:value="_value"/>
    </div>
    <div class="controlsDemo-MultilineTextDecorator__line ws-flexbox">
        <Controls.input:Label caption="Вывод текста:"/>
        <Controls.extendedDecorator:MultilineText
                attr:class="controlsDemo-MultilineTextDecorator__decorator"
                value="{{_value}}"/>
    </div>
</div>

