    <div class="controlsDemo__cell" data-qa="controlsDemo-headingCounters__primary4L">
        <div class="controls-text-label">fontColorStyle=primary, fontSize=4xl, separated hover</div>
        <Controls.heading:Title caption="Header" fontColorStyle="secondary" fontSize="4xl"
                                attr:data-qa="controlsDemo-headingCounters__primary4LTitle"
                                attr:class="controlsDemo__mr1_control"/>
        <Controls.heading:Counter attr:class="counter" caption="12" fontColorStyle="primary" fontSize="4xl"
                                  attr:data-qa="controlsDemo-headingCounters__primary4LCounter"/>
    </div>
</div>
