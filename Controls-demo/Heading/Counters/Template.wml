                                attr:data-qa="controlsDemo-headingCounters__unaccented3LTitle"
                                attr:class="controlsDemo__mr1_control"/>
        <Controls.heading:Counter attr:class="counter" caption="12" fontColorStyle="unaccented" fontSize="3xl"
