<div class="controlsDemo__wrapper controlsDemo__flex ws-justify-content-center">
    <div class="controlsDemo__flex ws-justify-content-center ws-align-items-center" data-qa="controlsDemo_capture">
        <div class="controlsDemo__cell controls-margin_right-2xl">
            <Controls.shortDatePicker:View
                attr:class="controlsDemo-ShortDatePicker__medium"
                attr:data-qa="controlsDemo-ShortDatePicker__all"
                startValue="{{_startValue}}"
                endValue="{{_endValue}}"
                chooseMonths="{{true}}"
                chooseHalfyears="{{false}}"
                chooseQuarters="{{false}}"
                chooseYears="{{false}}"
            />
        </div>
        <div class="controlsDemo__cell controls-margin_left-2xl">
            <Controls.shortDatePicker:View
                _date="{{ _date }}"
                attr:class="controlsDemo-ShortDatePicker__medium"
                attr:data-qa="controlsDemo-ShortDatePicker__years"
                startValue="{{_startValue}}"
                endValue="{{_endValue}}"
                chooseHalfyears="{{false}}"
                chooseMonths="{{false}}"
                chooseQuarters="{{false}}"
                chooseYears="{{true}}"
            />
        </div>
    </div>
</div>
