<div class="controlsDemo__wrapper controlsDemo_fixedWidth300">
    <Controls.scroll:Container attr:class="controlsDemo__height400">
        <Controls.list:View
            source="{{_viewSource}}"
            keyProperty="key"
            keepScrollAfterReload="{{true}}"
            bind:filter="_filter"/>
    </Controls.scroll:Container>
    <Controls.buttons:Button caption="Изменить фильтр"
                             on:click="_changeFilter()"
    />
</div>
