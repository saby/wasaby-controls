      <ws:Array>
        <ws:Object key="1" backgroundStyle="secondary" title="Вторичный" >
          <ws:headTemplate>
            <div class="controlsDemo_ColoredTabs-header
                        {{(_selectedKey !== null) ? ' controlsDemo_ColoredTabs__fixed-tab-header' : ''}}">
              <div attr:style="min-width: {{headTemplate.titleWidth}}px"
                   class="controlsDemo_ColoredTabs-title">{{ headTemplate.title }}</div>
              <div class="controlsDemo_ColoredTabs-counter
                        {{(_selectedKey !== null) ? ' controlsDemo_ColoredTabs__fixed-tab-counter' : ''}}">123</div>
            </div>
          </ws:headTemplate>
