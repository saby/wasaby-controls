<div class="controlsDemo__wrapper__padding-left controlsDemo_fixedWidth800 controlsDemo__height500">
  <div class="controlsDemo_ColumnsView_itemTemplate-title controlsDemo__cell">Controls.tabs:AccordionTabs</div>
  <Controls-TabsLayout.colored:View
      class="controlsDemo__height500"
      name="coloredTabs"
      bind:selectedKey="_selectedKey">
