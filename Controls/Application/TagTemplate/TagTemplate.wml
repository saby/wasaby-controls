<!-- Шаблон тега (Уголка) -->
<!-- @param: tagStyle 'info' | 'danger' | 'primary' | 'success' | 'warning' | 'secondary' -->
<!-- @param: [_options] Опции текущего scope-->
<svg attr:name="tag"
     viewBox="0 0 1 1"
     xmlns="http://www.w3.org/2000/svg"
     class="controls__tag controls__tag
                     controls__tag_style-{{tagStyle}} controls__tag_style-{{tagStyle}}_theme-{{_options.theme}}">
   <polygon points="0,0 1,1 1,0"/>
</svg>
